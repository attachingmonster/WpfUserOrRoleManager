<Window x:Class="WpfUserOrRoleManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfUserOrRoleManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="549.213" Width="848.5">
    <Window.Resources>
        <Color x:Key="Color1">#FF9AB1C0</Color>
        <Color x:Key="Color2">White</Color>
    </Window.Resources>
    <Grid HorizontalAlignment="Left" Height="518" VerticalAlignment="Top" Width="848" Margin="0,0,-8,0">
        <Image HorizontalAlignment="Left" Height="518" VerticalAlignment="Top" Width="848" Source="10.jpg" Stretch="Fill"/>
        <Rectangle HorizontalAlignment="Left" Height="393" Margin="424,81,0,0" VerticalAlignment="Top" Width="356" RadiusX="51" RadiusY="50" StrokeThickness="7" Opacity="0.9" OpacityMask="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
            <Rectangle.Stroke>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF2B62C3" Offset="0.505"/>
                </LinearGradientBrush>
            </Rectangle.Stroke>
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#00328BE4" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="用户登录" HorizontalAlignment="Left" Margin="500,107,0,0" VerticalAlignment="Top" Height="77" Width="218" FontSize="48" FontWeight="Bold" FontFamily="STCaiyun" Opacity="1.5">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF41C198" Offset="0.079"/>
                    <GradientStop Color="#FF919AF5" Offset="0.33"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label Content="账户" HorizontalAlignment="Left" Margin="440,189,0,0" VerticalAlignment="Top" Height="45" Width="76" FontSize="32" Foreground="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" FontFamily="STCaiyun" FontWeight="Bold"/>
        <TextBox Name="tbxUserName" HorizontalAlignment="Left" Height="35" Margin="530,193,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="220" BorderThickness="2" FontSize="24" Foreground="#FF1A2FB4" FontFamily="Perpetua Titling MT" FontWeight="Bold" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" RenderTransformOrigin="0,0">
            <TextBox.Background>
                <SolidColorBrush Color="#FF9AB1C0" Opacity="0.5"/>
            </TextBox.Background>
        </TextBox>
        <Label Content="密码" HorizontalAlignment="Left" Margin="440,233,0,0" VerticalAlignment="Top" FontSize="32" FontFamily="STCaiyun" Foreground="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
        <PasswordBox Name="pbxPassword" HorizontalAlignment="Left" Height="35" Margin="530,241,0,0" VerticalAlignment="Top" Width="220" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" BorderThickness="2" FontSize="24" FontFamily="Perpetua Titling MT" FontWeight="Bold" Foreground="#FF1A2FB4">
            <PasswordBox.Background>
                <SolidColorBrush Color="#FF9AB1C0" Opacity="0.5"/>
            </PasswordBox.Background>
        </PasswordBox>
        <CheckBox Content="记住密码" HorizontalAlignment="Left" Margin="558,291,0,0" VerticalAlignment="Top" Height="23" Width="104" FontSize="18" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" ClickMode="Press" FontFamily="STCaiyun" Opacity="0.6"/>
        <Label Content="找回密码" HorizontalAlignment="Left" Margin="675,285,0,0" VerticalAlignment="Top" FontSize="18" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" FontFamily="STCaiyun" Opacity="0.6"/>
        <Button Content="安 全 登 录" HorizontalAlignment="Left" Margin="500,333,0,0" VerticalAlignment="Top" Width="218" Height="49" Padding="2" FontSize="30" Opacity="0.8" FontFamily="STCaiyun" FontWeight="Bold" Foreground="{DynamicResource {x:Static SystemColors.WindowFrameBrushKey}}"/>
        <CheckBox Content="自动登录" HorizontalAlignment="Left" Margin="444,291,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="STCaiyun" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" ClickMode="Press" Opacity="0.6"/>
        <Button Content="注册账号" HorizontalAlignment="Left" Margin="446,407,0,0" VerticalAlignment="Top" Width="88" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" FontFamily="STCaiyun" Height="27" FontSize="16" Opacity="0.5"/>
        <Button Content="修改密码" HorizontalAlignment="Left" Margin="564,407,0,0" VerticalAlignment="Top" Width="88" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" FontSize="16" FontFamily="STCaiyun" Height="27" Opacity="0.5"/>
        <Button Content="拾回密码" HorizontalAlignment="Left" Margin="676,407,0,0" VerticalAlignment="Top" Width="88" FontSize="16" FontFamily="STCaiyun" Height="27" Opacity="0.5"/>
        <Label Content="用户登录系统" HorizontalAlignment="Left" Margin="10,1,0,0" VerticalAlignment="Top" Height="61" Width="340" FontSize="48" FontFamily="STCaiyun" FontStyle="Italic">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="{DynamicResource Color2}" Offset="0.552"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label Content="User Login System" HorizontalAlignment="Left" Margin="14,51,0,0" VerticalAlignment="Top" Height="59" Width="318" FontSize="36" FontFamily="STCaiyun" FontStyle="Italic">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource Color2}"/>
            </Label.Foreground>
        </Label>
    </Grid>
</Window>
